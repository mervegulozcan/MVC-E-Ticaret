
@{
    ViewBag.Title = "UpdateFilm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using proje_eticaret.Models;
@model Film
@section body2
{
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="block">
                    <div class="block-heading">
                        <div class="main-text h2">
                            Film Güncelleme Sayfası
                        </div>
                        <div class="block-controls">
                            <a href="/Product/Index">
                                <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                            </a>
                            <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                        </div>
                    </div>
                    <div class="block-content-outer">
                        <div class="block-content-inner">
                            <form action="/Admin/UpdateFilm" method="post" role="form" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Film Adı:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Film adı giriniz" value="@Model.MovieName" name="MovieName">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tür:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Tür giriniz" value="@Model.Genre" name="Genre">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Yayın Tarihi:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Yayın tarihi giriniz" value="@Model.RelaseDate" name="RelaseDate">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Yönetmen:</label>
                                    <input type="datetime" class="form-control" id="exampleInputEmail1" placeholder="Yönetmen adı giriniz" value="@Model.Director" name="Director">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Oyuncular:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Oyuncuları giriniz" value="@Model.Cast" name="Cast">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">IMDB Puanı:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="IMDB puanı giriniz" value="@Model.IMDB" name="IMDB">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Stok:</label>
                                    <input type="number" class="form-control" id="exampleInputEmail1" placeholder="Stok giriniz" value="@Model.Stock" name="Stock">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Fiyat:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Fiyat giriniz" value="@Model.Price" name="Price">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Açıklama:</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Açıklama giriniz" value="@Model.Description" name="Description">
                                </div>

                                <div class="form-group">
                                    <label for="input-demo-g">Fotoğraf seçiniz.</label>
                                    <input type="file" id="input-demo-g" name="Picture">
                                    <p class="help-block">Kategori için fotoğraf yükleyiniz.</p>
                                </div>
                                <input type="Hidden" name="ProductID" value="@Model.ProductID" />
                                <button type="submit" class="btn btn-primary">Güncelle</button>
                                <!--Submit içinde bulunduğu formun actionında hangi adres ve method tipi belirtilmişse eğer method post ise formun içindeki verileri post eder.-->
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
}