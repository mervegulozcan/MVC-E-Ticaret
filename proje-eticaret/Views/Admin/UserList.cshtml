
@{
    ViewBag.Title = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using proje_eticaret.Models
@model List<Customer>
@section body2
{
    <div class="col-md-12">

        <!-- START Block: Product List -->
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kullanıcılar
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="table-responsive">
                        <form role="form">
                            <table class="table table-condensed table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <td>
                                            <input type="text" class="form-control input-sm" placeholder="Kullanıcı Adı" size="5">
                                        </td>
                                    </tr>

                                    <tr>
                                        <th class="col-xs-2">Kullanıcı Adı</th>
                                        <th class="col-xs-2">İsim</th>
                                        <th class="col-xs-2">Email</th>
                                        <th class="col-xs-2">Adres</th>
                                        <th class="col-xs-2">Semt</th>
                                        <th class="col-xs-2">Telefon</th>
                                        <th class="col-xs-2">Rol İşlemleri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Customer cu in Model)
                                    {
                                        <tr>
                                            <td>@cu.UserName</td>
                                            <td>@cu.Name</td>
                                            <td>@cu.Email</td>
                                            <td>@cu.Address</td>
                                            <td>@cu.County</td>
                                            <td>@cu.Phone</td>
                                            <td class="text-right">
                                                <a href="#" role="button" class="btn btn-primary rounded addRole" data-username="@cu.UserName">Rol Ata</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Block: Product List -->

    </div>
}
@section scripts
	{
    <script>
            $(".addRole").on('click', function () {
                const username = $(this).attr("data-username");
                window.location.href = "/Admin/AssignRole?username=" + username;
            });
    </script>
}